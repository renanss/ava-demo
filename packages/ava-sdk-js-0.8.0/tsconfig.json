{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "./",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "grpc_codegen/**/*", "tests"],
  "ts-node": {
    "esm": true
  }
}
